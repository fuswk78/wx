.container {
    overflow: scroll;
}

.tab {
    width: 25%;
    position: fixed;
    left: 0;
    font-size: 28rpx;
    height: 100%;
    float:left;
    top: 0;
}

.tabs {
    background: #f5f5f5;
    padding: 40rpx 0 40rpx 10rpx;
}

.active {
    border-left: 4px solid #f02a43;
    color: #f02a43;
    background: #fff;
}

.left {
    position: fixed;
    width: 75%;
    right: 0;
    top: 0;
}

.left .show {
    width: 100%;
    display: block;
    margin-top: 100px;
    opacity: 0;
}

.product {
    overflow: hidden;
    height: 200rpx;
    border-left: 1px solid #f4f4f4;
    border-bottom: 1px solid #f4f4f4;
}

.productPic {
    width: 32%;
    margin: 2%;
    height: 160rpx;
    float: left;
}

.productName {
    font-size: 28rpx;
    display: block;
    margin: 40rpx 20rpx 20rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.progress {
    width: 60%;
}

.join {
    font-size: 28rpx;
    color: #f02a43;
    border: 1px solid #f02a43;
    width: 115rpx;
    height: 40rpx;
    float: left;
    padding-left: 4rpx;
    margin: 20rpx 0 0 200rpx; 
}

.hide {
    display: none;
}